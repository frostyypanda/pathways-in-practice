{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "step": {
      "type": "object",
      "properties": {
        "step_id": {
          "type": "string",
          "description": "Step identifier (e.g., '1', '1.1', '1.1.1' for nested substeps)"
        },
        "reaction_type": {
          "type": "string"
        },
        "reagents": {
          "type": "string",
          "description": "Text names of reagents shown as labels (not drawn structures)"
        },
        "reagent_smiles": {
          "type": "string",
          "description": "SMILES for reagents shown as drawn molecular structures"
        },
        "reagent_split_by_plus": {
          "type": "boolean"
        },
        "conditions": {
          "type": "string"
        },
        "yield": {
          "type": "string"
        },
        "reactant_smiles": {
          "type": "string"
        },
        "reactant_split_by_plus": {
          "type": "boolean"
        },
        "product_smiles": {
          "type": "string"
        },
        "product_split_by_plus": {
          "type": "boolean"
        },
        "notes": {
          "type": "string"
        },
        "substeps": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/step"
          },
          "description": "Nested substeps (supports up to 4-5 levels deep)"
        }
      },
      "required": [
        "step_id",
        "reactant_smiles",
        "product_smiles"
      ]
    }
  },
  "properties": {
    "meta": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "molecule_name": {
          "type": "string"
        },
        "class": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "year": {
          "type": "integer"
        },
        "journal": {
          "type": "string"
        },
        "doi": {
          "type": "string"
        },
        "source_url": {
          "type": "string",
          "description": "Source URL - extract from the final step of the main sequence"
        }
      },
      "required": [
        "id",
        "molecule_name",
        "author",
        "year"
      ]
    },
    "sequence": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/step"
      },
      "description": "Array of synthesis steps, always starting with step_id '1'"
    }
  },
  "required": [
    "meta",
    "sequence"
  ]
}
